<% if user_signed_in? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @chrooms.each do |chroom| %>
    <tr>
      <td><%= chroom.name %></td>
      <td><%= link_to raw(fa_icon 'plus'), chroom_chroom_users_path(chroom), method: :post %></td>
      <td><%= link_to raw(fa_icon 'minus'), chroom_chroom_users_path(chroom), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Chroom', new_chroom_path %>
<% end %>